<div class="container">
  <div class="row">
    <h2>Login In</h2>
    <form class= "login-form">
      <div class="row mb-3">
        <label for="name" class="col-sm-2 col-form-label">
          Username
        </label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="signin-name" />
        </div>
      </div>
      <div class="row mb-3">
        <label for="inputPassword3" class="col-sm-2 col-form-label">
          Password
        </label>
        <div class="col-sm-10">
          <input type="password" class="form-control" id="signin-password" />
        </div>
        <a class="nav-link text-center" href="/signup"> Don't have and account? Sign up here!</a>
      </div>
      <button type="submit" id="login" class="btn btn-primary">Sign in</button>
    </form>
  </div>
</div>
